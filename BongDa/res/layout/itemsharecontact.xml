<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sharcontact_itemwidth_space"
        android:layout_marginTop="@dimen/sharcontact_itemwidth_space"
        android:gravity="center" >

        <CheckBox
            android:id="@+id/itemsharecontact_checkbox"
            android:layout_width="@dimen/sharcontact_itemwidth_checkbox"
            android:layout_height="@dimen/sharcontact_itemwidth_checkbox"
            android:background="@drawable/checkbox_xml"
            android:button="@null" />

        <LinearLayout
            android:id="@+id/itemsharecontact_main"
            android:layout_width="@dimen/sharcontact_itemwidth_text"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/itemsharecontact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="BaseTextView"
                android:textColor="#333333"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/itemsharecontact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="BaseTextView"
                android:textColor="#333333" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/sharcontact_itemwidth"
        android:layout_height="1dp"
        android:background="@drawable/sharecongtact3" >
    </LinearLayout>

</LinearLayout>