<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >
	<LinearLayout
	         android:layout_width="@dimen/dimen_300dp"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:background="#ffffff">
			<ImageView
			    android:id="@+id/comment_avatar"
			    android:layout_width="@dimen/dimen_80dp"
			    android:layout_height="@dimen/dimen_80dp"
			    android:visibility="visible"
			    android:scaleType="fitXY"
			    android:src="@drawable/noimg" />
			<LinearLayout
	         android:layout_width="@dimen/dimen_220dp"
	         android:layout_height="wrap_content"
	         android:orientation="vertical"
	         android:layout_marginLeft="10dp"
	         android:background="#ffffff">
		         <LinearLayout
		         android:layout_width="@dimen/dimen_210dp"
		         android:layout_height="wrap_content"
		         android:orientation="horizontal"
		         android:background="#ffffff">
					<org.acv.bynal.views.BaseTextView
		         	    android:id="@+id/comment_name"
		         	    android:layout_width="@dimen/dimen_120dp"
		         	    android:layout_height="wrap_content"
		         	    android:gravity="left"
		         	    android:textSize="@dimen/dimen_14dp"
		         	    android:textColor="#000000"
		         	    android:text="" />
					<org.acv.bynal.views.BaseTextView
		         	    android:id="@+id/comment_created"
		         	    android:layout_width="@dimen/dimen_90dp"
		         	    android:layout_height="wrap_content"
		         	    android:gravity="right"
		         	    android:textSize="@dimen/dimen_14dp"
		         	    android:textColor="#000000"
		         	    android:text="" />
				</LinearLayout>
				<org.acv.bynal.views.BaseTextView
	         	    android:id="@+id/comment_commenttxt"
	         	    android:layout_width="@dimen/dimen_210dp"
	         	    android:layout_height="wrap_content"
	         	    android:gravity="left"
	         	    android:textSize="@dimen/dimen_15dp"
	         	    android:textColor="#000000"
	         	    android:text="" />
			</LinearLayout>

	</LinearLayout>
</RelativeLayout>