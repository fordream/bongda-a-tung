<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <org.acv.bynal.views.HeaderView
        android:id="@+id/registerfacebook_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </org.acv.bynal.views.HeaderView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/lregisterfacebooktwitter_text1"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="bottom"
                android:text="ユーザ名（ニックネーム可）"
                android:textColor="#000000"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/registerfacebooktwitter_edt1"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29dp"
                android:gravity="center|left"
                android:singleLine="true" />

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/registerfacebooktwitter_text2"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="bottom"
                android:text="Eメール"
                android:textColor="#000000"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/registerfacebooktwitter_edt2"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29dp"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textEmailAddress"
                android:singleLine="true" />

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/registerfacebooktwitter_text3"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="bottom"
                android:text="パスワード"
                android:textColor="#000000"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/registerfacebooktwitter_edt3"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29dp"
                android:gravity="center|left"
                android:inputType="textPassword"
                android:singleLine="true" />

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/registerfacebooktwitter_text4"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="bottom"
                android:text="パスワード(確認用)"
                android:textColor="#000000"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/registerfacebooktwitter_edt4"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29dp"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPassword"
                android:singleLine="true" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/registerfacebooktwitter_btn1"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="@dimen/dimen_37dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:background="@drawable/button_click_xml"
                android:gravity="center"
                android:textSize="@dimen/dimen_13dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>