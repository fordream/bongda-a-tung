    <RelativeLayout
        android:id="@+id/detailsTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:background="#cc0033"
        android:orientation="vertical" >

        <org.acv.bynal.views.BaseBoldTextView
            android:id="@+id/headertextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="ビデオアップロード"
            android:textColor="#ffffff"
        	android:textSize="@dimen/dimen_18dp"
            android:textStyle="bold" />

        <org.acv.bynal.views.BaseBoldTextView
            android:id="@+id/home_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/home_logo"
            android:text=""
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/headerbutton1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/dimen_45dp"
        	android:layout_height="@dimen/dimen_45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_xml" />

        <Button
            android:id="@+id/headerbutton2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/dimen_45dp"
        	android:layout_height="@dimen/dimen_45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/upload_xml" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/detailsTop"
        android:layout_centerHorizontal="true"
        android:background="#DCDCDC" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <!-- <TextView
                android:id="@+id/dateCaptured"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text=""
                android:textSize="15px" /> -->

            <ImageView
                 android:id="@+id/thumbnail"
                 android:layout_width="@dimen/dimen_300dp"
                 android:layout_height="@dimen/dimen_195dp"
                 android:background="@drawable/noimg"
                 android:layout_marginTop="@dimen/dimen_10dp"
                 android:scaleType="fitXY" />

            <!--
                 <LinearLayout
                android:id="@+id/dummy"
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" />
            -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/submitButton"
                android:layout_width="@dimen/dimen_195dp"
                android:layout_height="@dimen/dimen_37dp"
                android:background="@drawable/btn_red"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:text="YouTubeに投稿する"
                android:textSize="@dimen/dimen_18dp"
                android:gravity="center"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>