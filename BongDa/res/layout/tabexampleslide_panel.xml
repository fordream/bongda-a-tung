<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="@dimen/dimen_240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left" >

        <LinearLayout
            android:id="@+id/menuslide_header"
            android:layout_width="@dimen/dimen_240dp"
            android:layout_height="@dimen/dimen_55dp"
            android:background="@drawable/menu_bg_header"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/menuslide_header_img"
                android:layout_width="@dimen/dimen_119dp"
                android:layout_height="@dimen/dimen_15dp"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:background="@drawable/header_slide_logo"
                android:orientation="horizontal" >
            </ImageView>
        </LinearLayout>

        <ListView
            android:id="@+id/left_drawer_list"
            android:layout_width="@dimen/dimen_240dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/menuslide_header"
            android:background="#fff"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />
    </RelativeLayout>

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="right" >

        <FrameLayout
            android:id="@+id/mFrament"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/main_bound_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <org.acv.bynal.views.HeaderView
                    android:id="@+id/headerView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </org.acv.bynal.views.HeaderView>

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp" >
                </TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </TabHost>

</android.support.v4.widget.SlidingPaneLayout>