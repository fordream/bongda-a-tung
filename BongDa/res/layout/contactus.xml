<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <org.acv.bynal.views.BaseBoldTextView
        android:id="@+id/baseBoldTextView2"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:text="お問い合わせ"
        android:textColor="#333333"
        android:textSize="@dimen/dimen_15dp"
        android:textStyle="bold" />

    <org.acv.bynal.views.BaseTextView
        android:id="@+id/baseTextView1"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:text="BYNALは、掲載されているプロジェクトへのご質問にはお答えできません。\n各プロジェクトに関するお問い合わせは、個別にプロジェクトページよりお願いします。\nまた、BYNALの利用に関するお問い合わせは、必ずヘルプを先にご確認ください。 "
        android:textColor="#999999"
        android:textSize="@dimen/dimen_13dp" />

    <LinearLayout
        style="@style/bynal_edit_text"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/baseBoldTextView1"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="wrap_content"
                android:freezesText="false"
                android:gravity="center|left"
                android:text="メールアドレス"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_10dp"
                android:textStyle="bold|normal"
                android:typeface="normal" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/contactus_email"
                style="@style/bynal_edit_text_while"
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="@dimen/dimen_29dp"
                android:ems="10"
                android:gravity="center|left"
                android:singleLine="true" >
            </org.acv.bynal.views.BaseEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp" >

            <org.acv.bynal.views.BaseBoldTextView
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="件名"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_10dp"
                android:textStyle="bold|normal" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/contactus_title"
                style="@style/bynal_edit_text_while"
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="@dimen/dimen_29dp"
                android:ems="10"
                android:gravity="center|left"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp" >

            <org.acv.bynal.views.BaseBoldTextView
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="内容"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_10dp"
                android:textStyle="bold|normal" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/contactus_descripntion"
                style="@style/bynal_edit_text_while"
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="@dimen/dimen_89dp"
                android:gravity="top|left" />
        </LinearLayout>

        <org.acv.bynal.views.BaseTextView
            android:id="@+id/contactus_btn"
            android:layout_width="@dimen/dimen_145dp"
            android:layout_height="@dimen/dimen_29dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/contact_btn"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>