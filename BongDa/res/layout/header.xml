<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_main_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_45dp"
    android:background="#cc0033"
    android:orientation="vertical" >

    <org.acv.bynal.views.BaseBoldTextView
        android:id="@+id/headertextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="@dimen/dimen_18dp"
        android:textStyle="bold" />

    <org.acv.bynal.views.BaseBoldTextView
        android:id="@+id/home_logo"
        android:layout_width="@dimen/dimen_119dp"
        android:layout_height="@dimen/dimen_15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/home_logo"
        android:text=""
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/headerbutton1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dimen_45dp"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null" />

    <Button
        android:id="@+id/headerbutton2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dimen_45dp"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <RadioGroup
            android:id="@+id/headerradiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <RadioButton
                android:id="@+id/headerradiogroup1"
                android:layout_width="@dimen/dimen_79dp"
                android:layout_height="@dimen/dimen_25dp"
                android:background="@drawable/radio_left_xml"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="" />

            <RadioButton
                android:id="@+id/headerradiogroup2"
                android:layout_width="@dimen/dimen_79dp"
                android:layout_height="@dimen/dimen_25dp"
                android:background="@drawable/radio_right_xml"
                android:button="@null"
                android:gravity="center"
                android:text="" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>