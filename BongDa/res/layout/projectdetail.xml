<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center|top"
    android:orientation="vertical" >
	<LinearLayout
   	    android:layout_width="@dimen/dimen_320dp"
   	    android:layout_height="@dimen/dimen_60dp"
   	    android:background="#ffffff"
   	    android:padding="0dp"
   	    android:orientation="horizontal" >

		<ImageView
		    android:id="@+id/project_detail_share"
		    android:layout_width="@dimen/dimen_60dp"
		    android:layout_height="@dimen/dimen_42dp"
		    android:paddingRight="10dp"
		    android:layout_marginTop="10dp"
		    android:visibility="visible"
		    android:src="@drawable/project_detail_share" />
		<ImageView
		    android:id="@+id/imageView1_2"
		    android:layout_width="@dimen/dimen_25dp"
		    android:layout_height="wrap_content"
		    android:paddingRight="10dp"
		    android:layout_marginTop="10dp"
		    android:visibility="visible"
		    android:src="@drawable/project_detail_hr" />
		<ImageView
		    android:id="@+id/project_detail_money"
		    android:layout_width="@dimen/dimen_60dp"
		    android:layout_height="@dimen/dimen_42dp"
		    android:paddingRight="10dp"
		    android:layout_marginTop="10dp"
		    android:visibility="visible"
		    android:src="@drawable/project_detail_money" />
		<ImageView
		    android:id="@+id/imageView1_4"
		    android:layout_width="@dimen/dimen_25dp"
		    android:layout_height="wrap_content"
		    android:paddingRight="10dp"
		    android:layout_marginTop="10dp"
		    android:visibility="visible"
		    android:src="@drawable/project_detail_hr" />
		<ImageView
		    android:id="@+id/project_detail_setlike"
		    android:layout_width="@dimen/dimen_60dp"
		    android:layout_height="@dimen/dimen_42dp"
		    android:paddingRight="10dp"
		    android:layout_marginTop="10dp"
		    android:visibility="visible"
		    android:src="@drawable/project_detail_like" />
		<ImageView
		    android:id="@+id/imageView1_6"
		    android:layout_width="@dimen/dimen_25dp"
		    android:layout_height="wrap_content"
		    android:paddingRight="10dp"
		    android:layout_marginTop="10dp"
		    android:visibility="visible"
		    android:src="@drawable/project_detail_hr" />
		<ImageView
		    android:id="@+id/project_detail_calendar"
		    android:layout_width="@dimen/dimen_60dp"
		    android:layout_height="@dimen/dimen_42dp"
		    android:paddingRight="10dp"
		    android:layout_marginTop="10dp"
		    android:visibility="visible"
		    android:src="@drawable/project_detail_calendar" />
   	</LinearLayout>
    <ScrollView
        android:id="@+id/detail_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                 android:id="@+id/project_detail_image"
                 android:layout_width="@dimen/dimen_300dp"
                 android:layout_height="@dimen/dimen_200dp"
                 android:background="@drawable/noimg"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="0dp"
                 android:visibility="gone"
                 android:scaleType="fitXY" />
            <RelativeLayout
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
			    android:id="@+id/detail_display"
			    android:animationCache="false">
			</RelativeLayout>
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>