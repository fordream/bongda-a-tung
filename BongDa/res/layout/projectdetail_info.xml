<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
	<LinearLayout
         android:id="@+id/top"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_marginTop="20dp"
	         android:weightSum="2" >

		<ImageView
		    android:id="@+id/image_project_profile"
		    android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/noimg"
            android:scaleType="fitXY" />
		<LinearLayout
         	 android:id="@+id/right_block"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="vertical">
			<org.acv.bynal.views.BaseTextView
	         	    android:id="@+id/project_info_name"
	         	    android:layout_width="fill_parent"
	         	    android:layout_height="wrap_content"
	         	    android:gravity="left"
	         	    android:textSize="@dimen/dimen_15dp"
	         	    android:text="" />
			<LinearLayout
	         	 android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:orientation="horizontal">

				<org.acv.bynal.views.BaseTextView
				    android:id="@+id/project_info_sendmessage"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="left"
				    android:textSize="@dimen/dimen_15dp"
				    android:textColor="#b22222"
				    android:text="メッセージを送る " />
				<ImageView
			        android:id="@+id/send_message"
			        android:layout_width="@dimen/dimen_50dp"
			        android:layout_height="@dimen/dimen_20dp"
			        android:background="@drawable/pm_icon_send_message"
			        android:gravity="left"
			        android:scaleType="fitXY"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>