<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/messagelistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@drawable/transfer"
       
        android:dividerHeight="0dp" >
    </ListView>

    <RelativeLayout
        android:id="@+id/mesage_block"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/message_5"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/mesage_block_content"
            android:layout_width="@dimen/dimen_310dp"
            android:layout_height="@dimen/dimen_35dp"
            android:background="@drawable/message_6"
            android:gravity="center|bottom" >

            <LinearLayout
                android:id="@+id/mesage_block_content_1"
                android:layout_width="@dimen/dimen_310dp"
                android:layout_height="@dimen/dimen_32dp"
                android:gravity="center|left" >

                <ImageView
                    android:id="@+id/item1_img"
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_34dp" />

                <org.acv.bynal.views.BaseTextView
                    android:id="@+id/item1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_32dp"
                    android:gravity="center"
                    android:text="ABCD"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_16dp" />

                <org.acv.bynal.views.BaseTextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/message_menu_5" />

                <ImageView
                    android:id="@+id/item2_img"
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_34dp" />

                <org.acv.bynal.views.BaseTextView
                    android:id="@+id/item2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_32dp"
                    android:gravity="center"
                    android:text="ABCD"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_16dp" />

                <org.acv.bynal.views.BaseTextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/message_menu_5" />

                <ImageView
                    android:id="@+id/item3_img"
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_34dp" />

                <org.acv.bynal.views.BaseTextView
                    android:id="@+id/item3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_32dp"
                    android:gravity="center_vertical"
                    android:text="ABCD"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_16dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>