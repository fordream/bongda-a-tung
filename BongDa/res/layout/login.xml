<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center|top"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/login_main_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/login_main_login_text1"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="bottom"
                android:text="メールアドレス"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_13dp"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/login_main_login_email"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29dp"
                android:ems="10"
                android:gravity="center|left"
                android:singleLine="true" />

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/login_main_login_text2"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="bottom"
                android:text="パスワード"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_13dp"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/login_main_login_password"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29dp"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true" />

            <LinearLayout
                android:id="@+id/login_main_login_block"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/login_main_login_checkbox"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:background="@drawable/checkbox_login_xml"
                    android:button="@null" />

                <org.acv.bynal.views.BaseTextView
                    android:id="@+id/login_main_login_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:text="次回から自動的にログイン"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_13dp" />
            </LinearLayout>

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/login_main_login_forgotpassword"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="@dimen/dimen_26dp"
                android:background="@drawable/forgot_password"
                android:gravity="center"
                android:text="" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/login_main_login_btnlogin"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="@dimen/dimen_37dp"
                android:background="@drawable/login_register_btn_login"
                android:gravity="center" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/login_main_login_bor"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="@dimen/dimen_26dp"
                android:background="@drawable/login_register_bor"
                android:gravity="center" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/login_main_login_facebook"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="@dimen/dimen_37dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:background="@drawable/login_register_btn_login_facebook"
                android:gravity="center" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/login_main_login_twitter"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="@dimen/dimen_37dp"
                android:background="@drawable/login_register_btn_login_twitter"
                android:gravity="center"
                android:text="" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/login_main_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/login_main_register_text1"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="bottom"
                android:text="ユーザ名（ニックネーム可）"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_13dp"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/login_main_register_edt1"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29dp"
                android:ems="10"
                android:gravity="center|left"
                android:singleLine="true" />

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/login_main_register_text2"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="bottom"
                android:text="Eメール"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_13dp"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/login_main_register_edt2"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29dp"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textEmailAddress"
                android:singleLine="true" />

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/login_main_register_text3"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="bottom"
                android:text="パスワード"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_13dp"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/login_main_register_edt3"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29dp"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPassword"
                android:singleLine="true" />

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/login_main_register_text4"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="bottom"
                android:text="パスワード(確認用)"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_13dp"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/login_main_register_edt4"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29dp"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPassword"
                android:singleLine="true" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/login_main_register_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textColor="#000000"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/login_main_register_btn1_1"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="@dimen/dimen_37dp"
                android:background="@drawable/login_register_btn_register_btn"
                android:text="" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/login_main_login_bor_regiter"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="@dimen/dimen_26dp"
                android:background="@drawable/login_register_bor"
                android:gravity="center" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/login_main_register_btn2"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="@dimen/dimen_37dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_register_btn_register_facebook"
                android:gravity="center"
                android:text="" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/login_main_register_btn3"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="@dimen/dimen_37dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_register_btn_register_twitter"
                android:gravity="center"
                android:text="" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>