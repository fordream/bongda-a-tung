<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/livescore_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#999999"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_5dp"
        android:paddingTop="@dimen/dimen_5dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_20dp"
            android:background="@drawable/vietnam" />

        <TextView
            android:id="@+id/textView1"
            style="@style/bongda_text_item"
            android:layout_width="@dimen/dimen_240dp"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:src="@drawable/game_dudoan_recovered_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/livescore_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="@dimen/size_button_live_score"
                    android:layout_height="@dimen/size_button_live_score"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:background="@drawable/game_dudoan_recovered_23" />

                <ImageView
                    android:id="@+id/persion"
                    android:layout_width="@dimen/size_button_live_score"
                    android:layout_height="@dimen/size_button_live_score"
                    android:background="@drawable/game_dudoan_recovered_25" />

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="@dimen/size_button_live_score"
                    android:layout_height="@dimen/size_button_live_score"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:background="@drawable/game_dudoan_recovered_18" />

                <ImageView
                    android:id="@+id/traitim"
                    android:layout_width="@dimen/size_button_live_score"
                    android:layout_height="@dimen/size_button_live_score"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:visibility="gone"
                    android:background="@drawable/game_dudoan_recovered_20" />
            </LinearLayout>

            <TextView
                android:id="@+id/TextView01"
                style="@style/bongda_text_item_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/TextView03"
                style="@style/bongda_text_item_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Live"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff3333"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_5dp" >

            <LinearLayout
                android:id="@+id/ImageView03"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" >

                <TextView
                    android:visibility="gone"
                    android:id="@+id/TextView02_ketqua"
                    style="@style/bongda_text_item_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ImageView03"
                    android:padding="0dp"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:id="@+id/ImageView031"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/group122" >
                </ImageView>
            </LinearLayout>

            <TextView
                android:id="@+id/TextView02"
                style="@style/bongda_text_item_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ImageView03"
                android:gravity="right"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/TextView023"
                style="@style/bongda_text_item_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ImageView03"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv1"
            style="@style/bongda_text_item_small"
            android:layout_width="@dimen/dimen_225dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#666666" />

        <TextView
            style="@style/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:orientation="vertical" >
        </TextView>
    </LinearLayout>
