<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.app.bongda.view.HeaderView
        android:id="@+id/headerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.app.bongda.view.HeaderView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/logo_doinha"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_width="@dimen/dimen_75dp"
                    android:layout_height="@dimen/dimen_75dp"
                    android:background="@null" />

                <ImageView
                    android:id="@+id/logo_doikhach"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_width="@dimen/dimen_75dp"
                    android:layout_height="@dimen/dimen_75dp"
                    android:layout_alignParentRight="true"
                    android:background="@null" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/logo_doikhach"
                    android:layout_toRightOf="@+id/logo_doinha"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/bongda_text_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/ketqua5trangannhat"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_centerHorizontal="true">
                        <View android:background="@drawable/nam_tran_gan_nhat_bg1" android:layout_width="@dimen/dimen_135dp" android:layout_height="@dimen/dimen_25dp" android:layout_centerHorizontal="true" />
                        <TextView android:gravity="center" android:id="@+id/doinha_t1" android:background="#ffffff" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_marginTop="@dimen/dimen_3dp" android:text="" android:layout_alignParentLeft="true" />
                        <TextView android:gravity="center" android:id="@+id/doinha_t2" android:background="#ffffff" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="@dimen/dimen_3dp" android:layout_marginTop="@dimen/dimen_3dp" android:text="" android:layout_toRightOf="@+id/doinha_t1" />
                        <TextView android:gravity="center" android:id="@+id/doinha_t3" android:background="#ffffff" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="@dimen/dimen_3dp" android:layout_marginTop="@dimen/dimen_3dp" android:text="" android:layout_toRightOf="@+id/doinha_t2" />
                        <TextView android:gravity="center" android:id="@+id/doinha_t4" android:background="#ffffff" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="@dimen/dimen_3dp" android:layout_marginTop="@dimen/dimen_3dp" android:text="" android:layout_toRightOf="@+id/doinha_t3" />
                        <TextView android:gravity="center" android:id="@+id/doinha_t5" android:background="#ffffff" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="@dimen/dimen_3dp" android:layout_marginTop="@dimen/dimen_3dp" android:text="" android:layout_toRightOf="@+id/doinha_t4" />
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_10dp" android:layout_centerHorizontal="true">
                        <View android:background="@drawable/nam_tran_gan_nhat_bg2" android:layout_width="@dimen/dimen_135dp" android:layout_height="@dimen/dimen_25dp" android:layout_centerHorizontal="true" />
                        <TextView android:gravity="center" android:id="@+id/doikhach_t1" android:background="#ffffff" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_marginTop="@dimen/dimen_3dp" android:text="" android:layout_alignParentLeft="true" />
                        <TextView android:gravity="center" android:id="@+id/doikhach_t2" android:background="#ffffff" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="@dimen/dimen_3dp" android:layout_marginTop="@dimen/dimen_3dp" android:text="" android:layout_toRightOf="@+id/doikhach_t1" />
                        <TextView android:gravity="center" android:id="@+id/doikhach_t3" android:background="#ffffff" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="@dimen/dimen_3dp" android:layout_marginTop="@dimen/dimen_3dp" android:text="" android:layout_toRightOf="@+id/doikhach_t2" />
                        <TextView android:gravity="center" android:id="@+id/doikhach_t4" android:background="#ffffff" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="@dimen/dimen_3dp" android:layout_marginTop="@dimen/dimen_3dp" android:text="" android:layout_toRightOf="@+id/doikhach_t3" />
                        <TextView android:gravity="center" android:id="@+id/doikhach_t5" android:background="#ffffff" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="@dimen/dimen_3dp" android:layout_marginTop="@dimen/dimen_3dp" android:text="" android:layout_toRightOf="@+id/doikhach_t4" />
                    </RelativeLayout>
                    
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/bangxephang_header"
                style="@style/bongda_text_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#999999"
                android:gravity="center|left"
                android:text="@string/bangephang2doi"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <com.app.bongda.view.BangXepHangItemView
                android:id="@+id/bangXepHangItemView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:visibility="gone">
            </com.app.bongda.view.BangXepHangItemView>


		 <!-- <ListView
		     android:id="@+id/bangxephang_listview"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:divider="@null"
		     android:dividerHeight="0dp"
		     android:listSelector="@drawable/transfer" >

		    </ListView> -->
            <LinearLayout
                android:id="@+id/phongdodoidau_bangephang_listitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bangxephang_listview" 
                android:visibility="gone"
                android:orientation="vertical" >
            </LinearLayout>

            <com.app.bongda.view.PhongDodoiItemView
                android:id="@+id/phongDodoiItemView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.app.bongda.view.PhongDodoiItemView>

            <com.app.bongda.view.PhongDodoiItemView
                android:id="@+id/phongDodoiItemView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp" >
            </com.app.bongda.view.PhongDodoiItemView>

            <com.app.bongda.view.PhongDodoiItemTanCongPhongThuView
                android:id="@+id/phongDodoiItemTanCongPhongThuView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </com.app.bongda.view.PhongDodoiItemTanCongPhongThuView>

            <com.app.bongda.view.PhongDodoiItemTanCongPhongThuView
                android:id="@+id/phongDodoiItemTanCongPhongThuView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </com.app.bongda.view.PhongDodoiItemTanCongPhongThuView>

            <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp" >

            </LinearLayout> -->
            <RelativeLayout android:visibility="visible" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_below="@+id/phongDodoiItemTanCongPhongThuView2">
                <TextView android:textSize="@dimen/dimen_36dp" 
                    android:textStyle="bold" 
                    android:textColor="#ffc06020" 
                    android:gravity="center" 
                    android:id="@+id/text_result_predict" 
                    android:paddingLeft="@dimen/dimen_5dp" 
                    android:paddingRight="@dimen/dimen_5dp" 
                    android:layout_width="wrap_content" 
                    android:layout_height="@dimen/dimen_60dp" 
                    android:text="0 - 0" 
                    android:layout_centerHorizontal="true" />
                <RelativeLayout android:id="@+id/layout_predict_home_team_score" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_toLeftOf="@id/text_result_predict" 
                    android:layout_centerVertical="true">
                    <TextView android:textStyle="bold" 
                        android:gravity="center" 
                        android:textColor="#000000" 
                        android:id="@+id/text_result_predict_home_team_name" 
                        android:paddingLeft="@dimen/dimen_5dp" 
                    	android:paddingRight="@dimen/dimen_5dp" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="Tên đội nhà" 
                        android:layout_centerHorizontal="true" />
                    <TextView android:gravity="center" 
                        android:textColor="#000000" 
                        android:id="@+id/text_result_predict_home_team_goal" 
                        android:paddingLeft="@dimen/dimen_5dp" 
                    	android:paddingRight="@dimen/dimen_5dp" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="Số bàn có thể ghi: 0" 
                        android:layout_below="@id/text_result_predict_home_team_name" 
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <RelativeLayout android:id="@+id/layout_predict_away_team_score" 
                    android:visibility="visible" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@id/text_result_predict" 
                    android:layout_centerVertical="true">
                    <TextView android:textStyle="bold" 
                        android:gravity="center" 
                        android:textColor="#000000" 
                        android:id="@+id/text_result_predict_away_team_name" 
                        android:paddingLeft="@dimen/dimen_5dp" 
                    	android:paddingRight="@dimen/dimen_5dp" 
                        android:layout_width="wrap_content" android:layout_height="wrap_content" 
                        android:text="Tên đội khách" 
                        android:layout_centerHorizontal="true" />
                    <TextView android:gravity="center" 
                        android:textColor="#000000" 
                        android:id="@+id/text_result_predict_away_team_goal" 
                        android:paddingLeft="@dimen/dimen_5dp" 
                    	android:paddingRight="@dimen/dimen_5dp" 
                        android:layout_width="wrap_content" android:layout_height="wrap_content" 
                        android:text="Số bàn có thể ghi: 0" 
                        android:layout_below="@id/text_result_predict_away_team_name" 
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>