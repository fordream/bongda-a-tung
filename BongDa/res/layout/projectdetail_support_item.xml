<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#ffffff"
    android:orientation="vertical" >
	
    <LinearLayout
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_shape"
        android:gravity="center"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/support_item"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp" >
        	<LinearLayout
	        android:id="@+id/support_item_btn"
	        android:layout_width="@dimen/dimen_210dp"
	        android:layout_height="@dimen/dimen_30dp"
	        android:layout_marginBottom="@dimen/dimen_10dp"
	        android:layout_marginTop="@dimen/dimen_10dp"
	        android:background="@drawable/btn_red"
	        android:gravity="center"
	        android:orientation="horizontal"
	        android:padding="0dp" >
	        	<org.acv.bynal.views.BaseBoldTextView
	            android:id="@+id/support_value"
	            android:layout_width="@dimen/dimen_105dp"
	            android:layout_height="@dimen/dimen_30dp"
	            android:textSize="@dimen/dimen_15dp"
	            android:text="value"
	            android:paddingTop="@dimen/dimen_5dp"
	            android:paddingRight="@dimen/dimen_2dp"
	            android:textColor="#ffffff"
	            android:gravity="right" />
	        	<org.acv.bynal.views.BaseTextView
	            android:id="@+id/support_value_txtname"
	            android:layout_width="@dimen/dimen_105dp"
	            android:layout_height="@dimen/dimen_30dp"
	            android:textSize="@dimen/dimen_10dp"
	            android:paddingTop="@dimen/dimen_8dp"
	            android:text="支援する"
	            android:textColor="#ffffff"
	            android:gravity="left" />
        	</LinearLayout>
           
     </LinearLayout>

     <LinearLayout
         android:id="@+id/support_desc_info"
         android:layout_width="@dimen/dimen_300dp"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:gravity="left"
         android:orientation="vertical"
         android:layout_below="@+id/support_item"
         android:padding="0dp" >

         <org.acv.bynal.views.BaseTextView
             android:id="@+id/support_desc"
             android:layout_width="@dimen/dimen_300dp"
             android:layout_height="wrap_content"
             android:text="desc"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:textSize="@dimen/dimen_15dp" />

         <org.acv.bynal.views.BaseTextView
             android:id="@+id/support_backer"
             android:layout_width="@dimen/dimen_300dp"
             android:layout_height="wrap_content"
             android:text="backer"
             android:gravity="right"
             android:paddingRight="10dp"
             android:textSize="@dimen/dimen_15dp" />

         <org.acv.bynal.views.BaseTextView
             android:id="@+id/support_support_num_limit"
             android:layout_width="@dimen/dimen_300dp"
             android:layout_height="wrap_content"
             android:text="support_num_limit"
             android:gravity="right"
             android:paddingRight="10dp"
             android:paddingBottom="10dp"
             android:textSize="@dimen/dimen_15dp" />
     </LinearLayout>
   </LinearLayout>  

</RelativeLayout>