<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="line">
        <item name="android:background">#cccccc</item>
        <item name="android:height">1dp</item>
    </style>

    <style name="bongda_text_item">
        <item name="android:paddingLeft">@dimen/dimen_10dp</item>
        <item name="android:paddingRight">@dimen/dimen_10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dimen_14dp</item>
    </style>
    
    <style name="bongda_text_tendoibong">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dimen_14dp</item>
    </style>

    <style name="bongda_text_item_small" parent="@style/bongda_text_item">
        <item name="android:textSize">@dimen/dimen_10dp</item>
    </style>
	<style name="bongda_text_item_small_bangxephang" parent="@style/bongda_text_item_small">
        <item name="android:textSize">@dimen/dimen_10dp</item>
        <item name="android:padding">@dimen/dimen_0dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="bongda_text_item_phongdo" parent="bongda_text_item">
        <item name="android:paddingLeft">@dimen/dimen_3dp</item>
        <item name="android:paddingRight">@dimen/dimen_3dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dimen_12dp</item>
    </style>

    <style name="bongda_editext">
        <item name="android:height">@dimen/dimen_35dp</item>
        <item name="android:padding">@dimen/dimen_5dp</item>
        <item name="android:background">@drawable/edittext</item>
        <item name="android:textSize">@dimen/dimen_13dp</item>
    </style>

</resources>