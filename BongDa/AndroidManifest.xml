                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="app.bynal.woman" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.acv.bynal.push.mPaserPushBroadcastReciver" />
            </intent-filter>
        </receiver>
