            android:name="org.acv.bynal.activity.ProjectmanagerActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="org.acv.bynal.activity.ProjectDetailActivity"
